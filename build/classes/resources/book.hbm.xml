<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    	<class name="bean.Book" table="TBL_BOOK">
    		<id name="b_id" column="book_id" type="integer">
    			<generator class="assigned"/>
    		</id>
    		<property name="b_name" column="book_name" type="string"/>
    		<property name="b_author" column="author" type="string"/>
    		<property name="b_price" column="price" type="integer"/>    		
    	</class>
    </hibernate-mapping>